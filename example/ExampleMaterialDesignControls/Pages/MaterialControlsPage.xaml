<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:material="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
             x:Class="ExampleMaterialDesignControls.Pages.MaterialControlsPage"
             Title="Controls"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="True"
             IconImageSource="Controls.png">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="16" Spacing="16" >
                <material:MaterialButton Command="{Binding GoMaterialButtonCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Button" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}" />
                <material:MaterialButton Command="{Binding GoMaterialChipsCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Chips" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}" />
                <material:MaterialButton Command="{Binding GoMaterialDatePickerCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Date Picker" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}" />
                <material:MaterialButton Command="{Binding GoMaterialEditorCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Editor" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>
                <material:MaterialButton Command="{Binding GoMaterialEntryCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Entry" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>
                <material:MaterialButton Command="{Binding GoMaterialCodeEntryCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Code Entry" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>
                <material:MaterialButton Command="{Binding GoMaterialFieldCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Field" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>
                <material:MaterialButton Command="{Binding GoMaterialPickerCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Picker" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>
                <material:MaterialButton Command="{Binding GoMaterialSelectionCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Selection" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>
                <material:MaterialButton Command="{Binding GoMaterialTimePickerCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Time Picker" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>
                <material:MaterialButton Command="{Binding GoMaterialCustomControlCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Custom Control" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>
                <material:MaterialButton Command="{Binding GoMaterialSliderCommand}" Animation="Scale" AnimationParameter="0.98" Text="Material Slider" ToUpper="True" CornerRadius="14" BackgroundColor="{StaticResource GrayColor}" BorderColor="{StaticResource GrayColor}" TextColor="{StaticResource BlackColor}"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

