<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
    x:Class="ExampleMaterialDesignControls.Pages.MaterialFloatingButtonPage"
    xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    BackgroundColor="White"
    Padding="10,0"
    Title="Material Floating Button">
    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Label Text="Regular"/>
            <material:MaterialFloatingButton 
                Icon="add_w.png" 
		        Animation="Scale"
				HorizontalOptions="Center"
				Clicked="MaterialFloatingButton_Clicked"/>

            <Label Text="Mini"/>
            <material:MaterialFloatingButton 
		        Icon="add_w.png" 
		        ButtonSize="Mini" 
		        Animation="Scale"
				HorizontalOptions="Center"/>

            <Label Text="Mini (Disabled)"/>
            <material:MaterialFloatingButton 
		        Icon="add_w.png" 
				IsEnabled="False"
		        ButtonSize="Mini" 
		        Animation="Scale"
				HorizontalOptions="Center"/>

            <Label Text="Mini (.svg)"/>
            <material:MaterialFloatingButton  
		        ButtonSize="Mini" 
				IsEnabled="False"
		        Animation="Scale"
				HorizontalOptions="Center">
                <material:MaterialFloatingButton.CustomIcon>
                    <ffimageloadingsvg:SvgCachedImage Source="resource://ExampleMaterialDesignControls.Resources.Svg.ic_add_b.svg"/>
                </material:MaterialFloatingButton.CustomIcon>
                <material:MaterialFloatingButton.CustomDisabledIcon>
                    <ffimageloadingsvg:SvgCachedImage Source="resource://ExampleMaterialDesignControls.Resources.Svg.ic_add.svg"/>
                </material:MaterialFloatingButton.CustomDisabledIcon>
            </material:MaterialFloatingButton>

            <Label Text="Extended (Left icon)"/>
            <material:MaterialFloatingButton 
                Text="add" 
		        FontSize="16" 
		        Icon="add_w.png" 
		        ButtonSize="Extended" 
		        Animation="Fade"
				Command="{Binding TapCommand}"
				CommandParameter="Floating button command!"
				HorizontalOptions="Center"/>

            <Label Text="Extended (Right icon)"/>
            <material:MaterialFloatingButton 
                Text="add" 
		        FontSize="16" 
		        ButtonSize="Extended" 
		        Icon="add_w.png" 
		        IconSide="Right" 
		        Animation="Scale"
				HorizontalOptions="Center"/>

            <Label Text="Extended"/>
			<StackLayout Orientation="Horizontal">
                <material:MaterialFloatingButton 
					iOSShadowOpacity="0.3" 
		        	iOSShadowRadius="6" 
					iOSShadowOffset="0,5" 
		        	Text="Add new item" 
					FontSize="16" 
					FontAttributes="Bold"
					ButtonSize="Extended" 
					Animation="Fade"
					HorizontalOptions="Center"/>
                <material:MaterialFloatingButton 
					Text="Add new item" 
					ToUpper="True"
					FontSize="16" 
					ButtonSize="Extended" 
					Animation="Fade"
					HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
